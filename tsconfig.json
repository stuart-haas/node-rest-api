{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@controller/*": ["controller/*"], 
      "@decorator/*": ["decorator/*"], 
      "@entity/*": ["entity/*"],
      "@enum/*": ["enum/*"],
      "@middleware/*": ["middleware/*"],
      "@migration/*": ["migration/*"],
      "@model/*": ["model/*"], 
      "@repository/*": ["repository/*"], 
      "@service/*": ["service/*"],
      "@subscriber/*": ["subscriber/*"],
      "@test/*": ["test/*"],
      "@util/*": ["util/*"], 
    }
  },
  "include": [
    "**/*.ts", "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}